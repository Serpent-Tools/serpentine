base = Image("quay.io/toolbx-images/alpine-toolbox")
    > Exec("touch hello.txt")
    > Exec("mkdir foo")
    > Exec("touch foo/hello.txt");

hello = base > Export("hello.txt");
foo = base > Export("foo");

check_hello = Image("quay.io/toolbx-images/alpine-toolbox")
    > With(hello, "nice.txt")
    > Exec("cat nice.txt");

check_foo = Image("quay.io/toolbx-images/alpine-toolbox")
    > With(foo, "bar")
    > Exec("cat bar/hello.txt");

export DEFAULT = !(check_hello, check_foo) Noop(0);
